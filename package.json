{
  "private": true,
  "name": "peppermint-backend",
  "scripts": {
    "build": "turbo run build --filter=api",
    "dev": "npm run dev --workspace=api",
    "dev:turbo": "turbo run dev --filter=api",
    "db:generate": "turbo run db:generate --filter=api",
    "db:push": "turbo run db:push --filter=api",
    "lint": "turbo run lint --filter=api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^2.0.3"
  },
  "workspaces": [
    "apps/*"
  ],
  "dependencies": {
    "fastify": "^5.1.0"
  }
}